---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import RootLayout from "../layouts/RootLayout.astro";
import StatsControlledShader from "../components/StatsControlledShader";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<StatsControlledShader
				client:load
				shaderClassName="absolute w-full h-dvh -z-10"
				statsClassName="absolute right-0 top-1/2 -translate-y-1/2 p-4 sm:p-8 z-10"
			/>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10 pointer-events-none">
				<div>
					<H1 size="large"> Dot <br /> Phillips </H1>
				</div>

				<div class="mb-2 sm:mb-4 flex items-center justify-between pointer-events-auto">
					<div class="flex items-center gap-4">
						<Link href="#">Book a call</Link>
						<Link href="/projects" variant="secondary">View recent work</Link>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
